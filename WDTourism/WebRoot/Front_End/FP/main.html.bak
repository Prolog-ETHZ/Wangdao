    <script type="text/javascript">
        function Finish(){

            var new_arr = [];
            for(var i =0;i<10;i++){
                if(arr[i]!=undefined){
                    new_arr.push(arr[i]);

                }

            }
            if(new_arr.length==0){
                return ;
            }
            var content="";
            for(var i=0;i<new_arr.length;i++){
                alert(scenes[new_arr[i]]["location"]+","+scenes[new_arr[i]]["type"]+","+scenes[new_arr[i]]["name"]+","+scenes[new_arr[i]]["lng"]+","+scenes[new_arr[i]]["lat"]+","+scenes[new_arr[i]]["rec"]+","+scenes[new_arr[i]]["web1"]+","+scenes[new_arr[i]]["web2"]+","+""+scenes[new_arr[i]]["time"]+","+scenes[new_arr[i]]["pic"]);
                var tmp = scenes[new_arr[i]]["location"]+","+scenes[new_arr[i]]["type"]+","+scenes[new_arr[i]]["name"]+","+scenes[new_arr[i]]["lng"]+","+scenes[new_arr[i]]["lat"]+","+scenes[new_arr[i]]["rec"]+","+scenes[new_arr[i]]["web1"]+","+scenes[new_arr[i]]["web2"]+","+scenes[new_arr[i]]["time"]+","+scenes[new_arr[i]]["pic"];
                content+=tmp+"&";

            }
            $("#Go").val(content);
            $("#hide").submit();

        }
    </script>
